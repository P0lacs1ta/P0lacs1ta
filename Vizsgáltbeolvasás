#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int main()
{
    int adatok[10] = {12, 5, 9, 10, 12, 9, 10, 10, 11};
    int ok; char ch; int i;

    printf("Kerem adja meg a 10. adatot: ");
    do{
        ok=1;
        if(scanf("%d", &adatok[9])!=1){
            printf("Hibas adat! \n");
            ok=0;
        }
        else if(adatok[9]>20 || adatok[9]<1){
            printf("Hibas intervallum \n");
            ok=0;
        }
        while(ch=getchar()!='\n');
    }while(!ok);
    //2. feladat
    printf("\n A selejtszamok sorozata: ");
    for(i=0;i<10;i++){
        printf("%d ",adatok[i]);
    }
    //3. feladat:
    int temp;
    int osszes=0;
    for(i=0;i<10;i++){
        if(adatok[i]<adatok[i+1]){
            temp=adatok[i];
        }
    }
        for(i=0;i<10;i++){
            if(temp=adatok[i]){
                osszes=osszes+1;
            }
        }
    printf("\n Legnagyobb adat: %d. Ami %d alkalommal fordul elo", temp, osszes);



    return 0;
}
output:
Kerem adja meg a 10. adatot: 20

A selejtszamok sorozata: 12 5 9 10 12 9 10 10 11 20
Legnagyobb adat: 20. Ami 10 alkalommal fordul elo.
