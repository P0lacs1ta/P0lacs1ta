#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#include <math.h>
/*
20 elemű tömb, 1-5-ig töltsd fel érdemjegyekkel.
Egy függvény segítségével számold ki az átlagot (double)

*/
double atlagszamitas(int t[]);

int main()
{
    srand(time(0));
    int t[20];
    int i;
        for(i=0;i<20;i++){
            t[i]=rand() % (5-1+1)+1;
            printf("%d ",t[i]);
        }
    printf("%f", atlagszamitas(t));

    return 0;
}

double atlagszamitas(int t[]){
    int i; double n=20.0; double atlag=0;
    for(i=0;i<20;i++){
        atlag=atlag+t[i];
    }
    atlag=atlag/n;
    return atlag;

}
