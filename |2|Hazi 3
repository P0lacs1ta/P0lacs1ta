
3.
Adott egy tömb : 100 elem
Függvény hivással buborék rendezéssel állítsd sorba.


#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#include <math.h>

int buborek(int t[]);

int main()
{
    srand(time(0));
    int t[100], i;
    for(i=0;i<100;i++){
        t[i]=rand() % (100-1+1)+1;
        printf("%d ", t[i]);
    }
    printf("\n");
        printf("%d ", buborek(t));
    return 0;
}

int buborek(int t[]){
    int n=100, i, j;
    for(i=n-1;i>0;i--){
        for(j=0;i<100;i++){
            if(t[j]>t[j+1]){
                int tmp = t[j+1];
                t[j+1] = t [j];
                t[j] = tmp;
            }
        }
    }
    return t[i];
}
